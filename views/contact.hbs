<div class="myContainer container mt-5">
	<div class="row ">
		<div class="col-sm-8 col-md-8 ml-auto mr-auto mb-5 bg-light">			
			<div class="row">
				<div class="col-sm-12">
					<h2 class="mt-4">Contact</h2>
					{{#if msg }}
						<p>{{ msg }}</p>
					{{/if }}
					<hr style="height: 1px; background: rgba(0,0,0,0.1);">
				</div>
			</div>
			<div class="row ">
				<div class="col-sm-11 m-auto pb-4">
					<form id="contactForm" action="/contact" method="POST">
						<div class="form-group">
							<label for="fullName">Name</label>
							<input name="name" type="text" class="form-control" id="fullName" placeholder="John Smith">
						</div>
						<div class="form-group">
							<label for="email">Email address</label>
							<input name="email" type="email" class="form-control" id="email" placeholder="name@example.com">
						</div>
						<div class="form-group">
							<label for="message">Message</label>
							<textarea name="comment" class="form-control" id="message" rows="3"></textarea>
						</div>
						<button class="btn btn-secondary" type="reset">Reset</button>
						<button class="btn btn-primary" type="submit">Submit</button>
					</form>
				</div>
			</div>
		</div><!--end of contact form column-->
	</div><!--end of main row-->
</div><!--end of container-->
