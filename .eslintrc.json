{
    "env": {
        "browser": true,
        "commonjs": true,
		"node": true,
		"es6": true
	},
	"parserOptions": {
        "ecmaVersion": 2017
    },
    "rules": {
        "no-duplicate-case":"error",
        "no-empty":"error",
        "no-func-assign": "error",
        "no-irregular-whitespace":"error",
        "no-unreachable": "error",
        "curly": "error",
        "dot-notation": "error",
        "eqeqeq": "error",
        "no-empty-function": "error",
        "no-multi-spaces": "error",
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}
